{
  "name": "@mikefarrow/cms",
  "version": "0.0.2",
  "exports": {
    ".": "./exports.ts",
    "./*": "./shared/*.export.ts"
  },
  "scripts": {
    "dev": "concurrently --prefix ' ' -c 'bgGreen,bgRed,bgMagenta' \"sanity dev\" \"npm run watch:schemas\" \"npm run watch:queries\"",
    "start": "sanity start",
    "prebuild": "npm run generate:types && npm run lint && npm run check",
    "build": "sanity build",
    "deploy": "sanity deploy",
    "lint": "eslint .",
    "generate:schema": "sanity schema extract",
    "generate:types": "sanity typegen generate",
    "generate:all": "npm run generate:schema && npm run generate:types",
    "watch:schemas": "chokidar ./src/schemas --initial -c 'npm run generate:schema'",
    "watch:queries": "chokidar ./schema.json ./src/lib/queries -c 'npm run generate:types'",
    "prepare": "husky",
    "check": "npm run check:main && npm run check:shared",
    "check:main": "tsc --noEmit",
    "check:shared": "tsc --noEmit --project shared/tsconfig.json"
  },
  "dependencies": {
    "flat": "^6.0.1",
    "type-fest": "^5.2.0"
  },
  "devDependencies": {
    "@mikefarrow/prettier": "github:michaelfarrow/prettier#28eac082c27b13061f92dc6ba1d7563f04eb6a4f",
    "@sanity/code-input": "^6.0.1",
    "@sanity/eslint-config-studio": "^5.0.2",
    "@sanity/google-maps-input": "^4.2.0",
    "@sanity/vision": "^4.7.0",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.13.14",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "change-case": "^5.4.4",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.2.1",
    "easymde": "^2.20.0",
    "eslint": "^9.38.0",
    "husky": "^9.1.7",
    "lodash-es": "^4.17.21",
    "react-icons": "^5.5.0",
    "react-markdown": "^10.1.0",
    "sanity": "^4.20.3",
    "sanity-plugin-markdown": "^6.0.0",
    "styled-components": "^6.1.19",
    "title-case": "^4.3.2",
    "typescript": "^5.9.3",
    "typescript-plugin-css-modules": "^5.2.0",
    "vite-tsconfig-paths": "^5.1.4"
  }
}
